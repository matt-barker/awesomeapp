<% if signed_in? %>
<div class="row">
  <div class="col-xs-12 col-sm-2 col-md-4">
  </div>
    <div class="col-xs-12 col-sm-8 col-md-4">
    <h4>Add a review:</h4>
    <%= form_for([@product, @product.comments.build], remote: true) do |f| %>
      <p>
        <%= f.label :body, "Comments" %><br>
        <%= f.text_area :body, class: "form-control comment-body" %>
      </p>
    
      <p>
        <%= f.label :rating, "Rating" %><br>
        <div class="rating"></div>
      </p>
    
      <p>
        <%= f.submit "Submit", class: "btn btn-lg btn-success btn-block" %>
      </p>
    <% end %>
  </div>
  <div class="col-xs-12 col-sm-2 col-md-4">
  </div>
</div>
<hr>
<% end %>